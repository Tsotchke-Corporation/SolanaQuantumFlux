{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom", "esnext.bigint"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
